<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundoapp"
        tools:context=".Activity.LoginActivity">

    <TextView
            android:text="Bem vindo, Faça o login"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:layout_marginTop="97dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>
    <EditText
            android:id="@+id/editEndereço"
            style="@style/EditTextLoginTheme"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_user"
            android:hint="Usuário"
            android:gravity="center"
            android:textColorHint="@color/colorcontr"
            android:textColorLink="@color/colorcontr"
            android:fadingEdge="none"
            android:selectAllOnFocus="true" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginBottom="42dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editPassword"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/editPassword"
            style="@style/EditTextLoginTheme"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="Senha"
            android:textColorLink="@android:color/background_dark"
            android:textColorHint="@color/colorcontr"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/editEndereço" android:layout_marginBottom="51dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntrar"
            android:gravity="center"
            android:textColorLink="@color/colortext" android:textColorHint="@color/colortext"
            android:textColor="@color/design_default_color_primary"
            style="@style/Widget.AppCompat.Button"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" android:layout_marginBottom="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="190dp"
            android:layout_height="0dp" app:srcCompat="@drawable/mcvidrospp"
            android:id="@+id/imageView3"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="38dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editEndereço"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>