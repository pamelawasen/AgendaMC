<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LoginActivity">

    <TextView
            android:text="Bem vindo, Faça o login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="63dp" android:layout_marginLeft="99dp" android:layout_marginStart="99dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail"
            android:layout_marginTop="127dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="129dp" app:layout_constraintEnd_toEndOf="@+id/editPassword"
            app:layout_constraintStart_toStartOf="@+id/editPassword"
            app:layout_constraintBottom_toBottomOf="@+id/editPassword" android:hint="Digite seu usuário"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="79dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="79dp" android:hint="Digite sua senha"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="@+id/editPassword" android:layout_marginTop="59dp"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"/>
</android.support.constraint.ConstraintLayout>