<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundopretotextura"
        android:backgroundTintMode="src_over"
        tools:context=".Activity.LoginActivity">


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="182dp"
            android:id="@+id/relativeLayout2" android:layout_marginTop="16dp" android:layout_marginBottom="85dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editUsuario"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/mcvidrospp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:baselineAlignBottom="false"
                android:id="@+id/imageView3"
                tools:layout_editor_absoluteY="174dp" tools:layout_editor_absoluteX="126dp"/>
    </RelativeLayout>
    <EditText
            android:id="@+id/editUsuario"
            style="@style/EditTextLoginTheme"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_user"
            android:hint="UsuÃ¡rio"
            android:gravity="center"
            android:textColorHint="@color/colorcontr"
            android:textColorLink="@android:color/background_light"
            android:textColor="@color/colorcontr"
            android:fadingEdge="none"
            android:selectAllOnFocus="true" android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" android:layout_marginBottom="18dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:id="@+id/editPassword"
            style="@style/EditTextLoginTheme"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="Senha"
            android:textColorLink="@android:color/background_light"
            android:textColorHint="@color/colorcontr"
            android:textColor="@color/colorcontr"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/editUsuario" android:layout_marginBottom="121dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3" app:layout_constraintBottom_toTopOf="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="@+id/frameLayout3" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" android:layout_marginEnd="3dp" android:layout_marginRight="3dp"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntrar"
            android:gravity="center"
            android:textColorLink="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorcontr"
            style="@style/Widget.AppCompat.Button"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" android:layout_marginBottom="161dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <FrameLayout
            android:layout_width="239dp"
            android:layout_height="44dp"
            android:id="@+id/frameLayout3" app:layout_constraintEnd_toEndOf="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="@+id/btnEntrar"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="39dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnEntrar">

        <CheckBox
                android:id="@+id/checkBoxLembrar"
                android:buttonTint="@color/colorcontr"
                android:text="Lembrar Usuario e Senha"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:textColor="@color/colorcontr"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="420dp" tools:layout_editor_absoluteX="133dp"
                android:linksClickable="false" android:focusable="auto"/>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>